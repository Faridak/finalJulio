{
    "name": "ventdepot/ecommerce-platform",
    "description": "A comprehensive e-commerce marketplace platform",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "VentDepot Team",
            "email": "development@ventdepot.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-mbstring": "*",
        "stripe/stripe-php": "^10.0",
        "phpmailer/phpmailer": "^6.6",
        "firebase/php-jwt": "^6.3",
        "vlucas/phpdotenv": "^5.4",
        "monolog/monolog": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "VentDepot\\": "src/"
        },
        "files": [
            "includes/functions.php",
            "includes/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "VentDepot\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "sort-packages": true
    }
}